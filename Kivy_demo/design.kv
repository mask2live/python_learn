
# screen of login page
<LoginScreen>: 
    GridLayout:
        cols: 1  # located column 1
        GridLayout:
            cols: 1
            padding: 20, 20
            spacing: 20, 30
            Label:
                text: "User Login"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
            Label:
                id: login_wrong
                text: ""
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.7
                    pos_hint: {'center_x': 0.5,'center_y': 0.6}
            

        GridLayout:
            cols: 2  # located column 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password?"
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1,0.7,1,1

                on_press: root.go_to_forgot()
            Button:
                text: "Sign Up"
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1,0.7,1,1


                # root is means to class of LoginScreen in py
                # it called the function which defined in class of LoginScreen
                on_press: root.sign_up()  

# screen of sign up page
# id -- it on behave of the input identity, which can get its objects by ids
<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20,20
        spacing: 20,20
        Label:
            text: "Sign Up for a space journey!"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id : password
            hint_text: "Password"
        Label:
            id: signup_wrong
            text: ""
        Button:
            text: "Submit"

            # root is means to class of SignUpScreen in py
            # it called the function which defined in class of SignUpScreen
            on_press: root.add_user(root.ids.username, root.ids.password)
            opacity: 1 if self.state == "normal" else 0.5
            color: 0.1,0.7,1,1
        Button:
            text: "Cancel"
            on_press: root.back_to_login()
            opacity: 1 if self.state == "normal" else 0.5
            color: 0.1,0.7,1,1


<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful!"
        Button:
            text: "Back to login"
            on_press: root.back_to_login()


<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30,30
        spacing: 30,30
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: 'Files/logout_hover.png' if self.hovered else "Files/logout_nothover.png"
                size_hint: 0.3, 0.3
                pos_hint: {'center_x': 0.9, 'center_y': 0.8}
        Label:
            text: "How do you feel?"
        TextInput:
            id: tryinput
            hint_text: "Things to try!!!(happy, sad or unloved...)"
        Button:
            text: "Enlighten me"
            on_press: root.get_quote(root.ids.tryinput.text)
        ScrollView:
            Label:
                id: quotestatement
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]


<ForgotPasswdScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Retrieve Password"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: username_confirm
            hint_text: "Confirm username"
        Label:
            id: forgot_tip
            text: ""
        Button:
            text: "Confirm"
            on_press: root.confirm_username(root.ids.username.text, root.ids.username_confirm.text)


<ResetPasswdScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Reset Password"
        TextInput:
            id: username
            hint_text: "username"
        TextInput:
            id: passwd
            hint_text: "new passsword"
        TextInput:
            id: passwd_confirm
            hint_text: "Confirm new password"
        Label:
            id: reset_tip
            text: ""
        Button:
            text: "Confirm"
            on_press: root.reset(root.ids.username.text, root.ids.passwd.text, root.ids.passwd_confirm.text)


<ResetPasswdSuccessScreen>:
    GridLayout:
        cols:1
        Label:
            text: "Reset password successfully"
        Button:
            text: "back to login"
            on_press: root.back_login()

# manager of screens
<RootWidget>
    LoginScreen:
        name: "login_screen"

    SignUpScreen:
        name: "sign_up_screen"

    SignUpScreenSuccess:
        name: "sign_up_screen_success"

    LoginScreenSuccess:
        name: "login_screen_success"

    ForgotPasswdScreen:
        name: "forgot_password_screen"

    ResetPasswdScreen:
        name: "reset_password_screen"
    ResetPasswdSuccessScreen:
        name: "reset_success_screen"